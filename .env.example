# Server Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
POSTGRES_HOST=database
POSTGRES_PORT=5432
POSTGRES_DB=matcha_db
POSTGRES_USER=matcha_user
POSTGRES_PASSWORD=matcha_password

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (for user verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@matcha.com

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5001

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# Geolocation API (optional, if using external service)
GEO_API_KEY=your_geolocation_api_key_if_needed